{
  "manifest_version": 3,
  "name": "PASS Webview Mock Extension",
  "version": "1.0.0",
  "description": "PASS 앱 웹뷰 시뮬레이션을 위한 Chrome 확장프로그램",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "http://211.108.168.32:3000/*",
    "http://192.168.17.123/*",
    "https://vf.passoh.io/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "http://192.168.17.123/*",
        "http://211.108.168.32:3000/*",
        "https://vf.passoh.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PASS Webview Mock"
  }
}